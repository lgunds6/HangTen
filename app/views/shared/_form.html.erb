
<%= form_with model: @board do |form| %>
<div class="form">
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :condition %><br>
    <%= form.text_area :condition %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.text_area :price %>
  </div>
   <div>
    <%= form.label :picture %><br>
    <%= form.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %>
  </div>
  <br>
  <div>
    <%= form.submit %>
  </div>
</div>
<% end %>